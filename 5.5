#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int secretNumber, guess, attemptsLeft = 5;

    // Generate a random number between 1 and 100
    srand(time(NULL));
    secretNumber = rand() % 100 + 1;

    printf("I'm thinking of a number between 1 and 100. You have 5 attempts to guess it.\n");

    while (attemptsLeft > 0) {
        printf("Guess #%d: ", 6 - attemptsLeft);
        scanf("%d", &guess);

        if (guess == secretNumber) {
            printf("Congratulations! You guessed the number.\n");
            return 0;
        } else if (guess < secretNumber) {
            printf("The number I'm thinking of is greater than %d.\n", guess);
        } else {
            printf("The number I'm thinking of is less than %d.\n", guess);
        }

        attemptsLeft--;
    }

    printf("Sorry, you didn't guess the number in time. The number I was thinking of was %d.\n", secretNumber);
    return 0;
}
